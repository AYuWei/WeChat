.container{
  width: 100%;
  height: 100%;
}
.wrapper{
  padding: 40rpx;
  width: 84%;
}
.wrapper .title{
  width: 100%;
text-align: center;
height: 100rpx;
line-height: 100rpx;
font-size: 40rpx;

}
.wrapper .item{
  height: 100rpx;
width: 100%;
line-height: 100rpx;
}
.wrapper .item input{
  height: 80rpx;
border: 1rpx solid #e5e5e5;
line-height: 80rpx;
padding-left: 30rpx;
border-radius: 5rpx;
}
.wrapper .item text{
  display: inline-block;
  background: #8bc34a;
color: #fff;
font-weight: 550;
font-size: 40rpx;
width: 100%;
height: 100rpx;
display: inline-block;
text-align: center;
border-radius: 7rpx;
margin-top: 50rpx;

}
.wrapper .item .inp1{
  border-color: #000;
}
.wrapper .item .inp2{
  border-color: pink;
}
.wrapper .footer{
  margin-top: 80rpx;
}
.wrapper .footer .content{
  line-height: 2em;
}
.wrapper .footer .content .max{
  height: 80rpx;
line-height: 80rpx;
display: flex;

}
.wrapper .footer .content .max .men{
  flex: 1;
text-align: center;
background: #000;
color: pink;
font-size: 40rpx;
font-weight: 550;
}
.wrapper .footer .content .max image{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  
}
.wrapper .footer .content .max .women{
  flex: 1;
text-align: center;
background-color: pink;
font-size: 40rpx;
color: #000;
font-weight: 550;

}
.wrapper .footer .content .text{
  text-indent: 2em;
padding-top: 40rpx;
color: #ff9800;
font-size: 36rpx;

}