.container{
  height: auto;
}
.currentTitle{
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #e5e5e5;
  width: 100%;
  text-align: center;  
}
.currentTitle text{
  padding: 10rpx 20rpx;

  margin: 0 20rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.currentTitle text.active{
  background-color: #8bc34a;
color: #fff;
font-weight: 540;
box-sizing: border-box;

}
.content{
  width: 100%;
display: flex;

flex-wrap: wrap;
justify-content: space-around;
}
.content image{
  width: 45%;
  margin: 10rpx 0;
  padding: 15rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 4rpx;
  display: inline-block;
}
.content image.lash{
  border: 1rpx solid transparent;
} 
.content .wrapper{
  width: 100%;
  height: 150rpx;
  border-radius: 5rpx;
  margin-bottom: 48rpx;

}
.content .wrapper .item {
  width: 94%;
  height: 150rpx;
  position: relative;
margin: auto;
border-radius: 5rpx;
box-shadow: 5rpx 5rpx 9rpx #8bc34a;


}
.content .wrapper .item.active{
  box-shadow: -1rpx 7rpx 9rpx #6a9639;

}

.content .wrapper .item .text{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.content .wrapper .item .time{
  position: absolute;
  bottom: 10rpx;
  right: 25rpx;
}


.add{
  position: fixed;
  bottom: 0;
  height: 80rpx;
  margin: auto;
}
.add image{
  width: 80rpx;
  height: 80rpx;
  margin-left: 50%;
  transform: translateX(-50%);
}