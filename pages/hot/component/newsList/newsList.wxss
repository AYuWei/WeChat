.news-list{
  padding: 20rpx;
  height:auto;
}
.news-item{
  width: 100%;
  min-height: 150rpx;
  display: flex;
  padding: 20rpx 0;
  border-bottom: 0.5rpx solid #e5e5e5dc;
}
.left{
  flex: 1;
}
.footer{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 27rpx;
  padding-top: 26rpx;

}
.right {
  width: 250rpx;
  height: 150rpx;
  margin-left: 14rpx;
}
.right image{
  width: 100%;
  height: 100%;
  border-radius: 9rpx;
}
.time{
  margin-left: 50rpx;
}