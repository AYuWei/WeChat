
.top-nav{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #e5e5e5;
  box-sizing: border-box;
  color: rgb(84, 84, 84);
  font-size: 33rpx;
}
.top-nav .scroll-wrapper{
  display: flex;
  width: 1050rpx;
}
.top-nav .scroll-wrapper .item{
  height: 80rpx;
  padding: 0 20rpx;
}
.top-nav .scroll-wrapper .item .active{
  font-size: 37rpx;
  font-weight: bold;
  color: #000;
}
