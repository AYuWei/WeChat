.header{
  width: 100%;
  height: 100%;
}
.header .img{
  width: 100%;
  display: flex;
  height: 100rpx;
height: 122rpx;
padding: 20rpx 20rpx 0;


}
.header .img image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.header .img button{
  background: #fff;
  width: auto;
  margin-left: 5rpx;
  height: auto;
  padding-top: 25rpx;
  

}
.content{
  width: 100%;
height: calc(100% - 122rpx);
background-color: #e5e5e5;
 padding-top: 1rpx;
 
}
.content .item{
  height: 100rpx;
width: 100%;
background-color: #fff;
margin: 30rpx 0;
display: flex;
position: relative;
}
.content .item.active{
  background-color: #c9c4c4;
}
.content .item image{
  width: 60rpx;
height: 60rpx;
margin-top: 20rpx;
padding-left:  20rpx;

}
.content .item .title{
  line-height: 100rpx;
padding-left: 25rpx;

}
.content .item .content{
  width: auto;
height: 100rpx;
line-height: 100rpx;
background-color: transparent;
position: absolute;
right: 100rpx;
color : #999;
}
.content .item .right{
  position: absolute;
  right: 15rpx;
}
.popup{
  position: absolute;
width: 100%;
height: 100%;
top: 0rpx;

background-color: rgba(0, 0, 0, 0.3);
}