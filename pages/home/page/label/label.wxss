.content{
  width: 100%;
display: flex;

flex-wrap: wrap;
justify-content: space-around;
}
.content image{
  width: 45%;
  margin: 10rpx 0;
  padding: 15rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 4rpx;
  display: inline-block;
}
.content image.lash{
  border: 1rpx solid transparent;
} 
.content .wrapper{
  width: 100%;
  height: 150rpx;
  border-radius: 5rpx;
  margin-bottom: 48rpx;

}
.content .wrapper .item {
  width: 94%;
  height: 150rpx;
  position: relative;
margin: auto;
border-radius: 5rpx;
box-shadow: 5rpx 5rpx 9rpx #8bc34a;


}
.content .wrapper .item .text{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.content .wrapper .item .time{
  position: absolute;
  bottom: 10rpx;
  right: 25rpx;
}

